{
    "name": "bitbucket-copy-format",
    "version": "2.0",
    "permissions": [
      "activeTab",
      "clipboardRead",
      "clipboardWrite",
      "notifications",
      "https://bitbucket.org/*/*/commits/*",
      "http://*/",
      "https://*/"
    ],
    "background": {
      "scripts": ["src/background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_title": "Copy commits and format to redmine format",
      "default_icon": { 
          "32": "src/images/icon.png"
      }
    },
    "manifest_version": 2
  }