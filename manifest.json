{
    "name": "bitbucket-copy-format",
    "version": "2.0",
    "permissions": [
      "activeTab",
      "clipboardWrite"
    ],
    "content_scripts": [{
      // "matches": ["<all_urls>"],
      "matches": ["https://bitbucket.org/*/*/commits/*"],
      "js": ["src/content.script.js"],
      "run_at": "document_end"
    }],
    "background": {
      "scripts": ["src/background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_title": "Copy commits and format to redmine format",
      "default_icon": { 
          "32": "src/images/icon.png"            // optional
      }
    },
    "manifest_version": 2
  }